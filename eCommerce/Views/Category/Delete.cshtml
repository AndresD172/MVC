@model eCommerce.Models.Category
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Categoría</h1>

<form method="post" asp-action="Delete">
    <input asp-for="Id" type="hidden" />

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <h2 class="text-danger">¿Está seguro de que desea eliminar esta categoría?</h2>
        </div>

        <div class="container">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Nombre Categoría</label>
                    <input asp-for="Name" class="form-control" disabled />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ShowOrder" class="form-label">Orden</label>
                    <input asp-for="ShowOrder" class="form-control" disabled />
                </div>
            </div>

            <div class="row">
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button type="submit" class="btn btn-danger me-md-2">Eliminar</button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-success">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

